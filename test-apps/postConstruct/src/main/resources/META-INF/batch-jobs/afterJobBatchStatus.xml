<job id="afterJobBatchStatus" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd"
     version="1.0">
    <properties>
        <property name="add.to.job.exit.status" value="true"/>
    </properties>

    <listeners>
        <listener ref="jobListener1">
            <properties>
                <property name="os.name" value="#systemProperties['os.name']"/>
            </properties>
        </listener>
    </listeners>

    <step id="step1">
        <listeners>
            <listener ref="stepListener1">
                <properties>
                    <property name="os.name" value="#systemProperties['os.name']"/>
                </properties>
            </listener>
        </listeners>
        <batchlet ref="batchlet1">
            <properties>
                <property name="date" value="5/16/2013"/>
            </properties>
        </batchlet>
    </step>
</job>
