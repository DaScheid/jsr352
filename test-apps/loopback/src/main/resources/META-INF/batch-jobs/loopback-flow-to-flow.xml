<job id="loopback-flow-to-flow" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
    <flow id="flow1">
        <step id="flow1.step1">
            <batchlet ref="Batchlet0"/>
        </step>
        <next on="*" to="flow2"/>
    </flow>

    <flow id="flow2" next="flow1">
        <step id="flow2.step1">
            <batchlet ref="Batchlet0"/>
            <next on="*" to="flow2.step2"/>
        </step>

        <step id="flow2.step2">
            <batchlet ref="Batchlet0"/>
        </step>
    </flow>
</job>
