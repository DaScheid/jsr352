<job id="job1" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.net/projects/jbatch/sources/jsr-352-git-repository/content/JSR352.JobXML.Model/src/main/resources/jobXML.xsd">

    <properties>
        <property name="job-prop" value="job-prop"></property>
        <property name="job-prop-2" value="job-prop-2"></property>
    </properties>

    <split id="split1" next="decision1">
        <properties>
            <property name="split-prop" value="split-prop"/>
        </properties>
        <flow id="flow1">
            <properties>
                <property name="flow-prop" value="flow-prop"/>
            </properties>
            <step id="step11" next="step12">
                <properties>
                    <property name="step-prop" value="step-prop"></property>
                </properties>
                <batchlet ref="Batchlet1">
                    <properties>
                        <property name="reference-flow-prop" value="#{jobProperties['flow-prop']}"/>
                        <property name="reference-split-prop" value="#{jobProperties['split-prop']}"/>
                    </properties>
                </batchlet>
            </step>

            <step id="step12">
                <batchlet ref="Batchlet1"/>
            </step>
        </flow>

        <flow id="flow2">
            <step id="step21">
                <batchlet ref="Batchlet1"/>
                <next on="*" to="step22"/>
            </step>
            <step id="step22">
                <batchlet ref="Batchlet1"/>
            </step>
        </flow>
    </split>

    <decision id="decision1" ref="Decider2">
        <!-- Decider2 sets exit status to "next", thus directing the job to step3 -->
        <next on="next" to="step3" />
    </decision>
    
    <step id="step3">
        <batchlet ref="Batchlet1"/>
    </step>

</job>
