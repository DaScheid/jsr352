<job id="chunk-mixed-child" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.net/projects/jbatch/sources/jsr-352-git-repository/content/JSR352.JobXML.Model/src/main/resources/jobXML.xsd">
    <step id="chunk-mixed-child" parent="chunk-mixed-parent">
        <chunk checkpoint-policy="custom" skip-limit="15" >
            <reader ref="R1">
                <properties merge="false">
                    <property name="child" value="child"></property>
                </properties>
            </reader>
            <processor ref="P1">
                <properties merge="true">
                    <property name="child" value="child"></property>
                </properties>
            </processor>
            <writer ref="W1">
                <properties>
                    <property name="child" value="child"></property>
                </properties>
            </writer>

            <checkpoint-algorithm ref="child">
                <properties merge="true">
                    <property name="child" value="child"></property>
                </properties>
            </checkpoint-algorithm>
            <skippable-exception-classes>
                <include class="java.lang.RuntimeException"></include>
                <exclude class="java.lang.IllegalStateException"></exclude>
            </skippable-exception-classes>
            <retryable-exception-classes>
                <include class="java.lang.RuntimeException"></include>
                <exclude class="java.lang.IllegalStateException"></exclude>
            </retryable-exception-classes>
            <no-rollback-exception-classes>
                <include class="java.lang.RuntimeException"></include>
                <exclude class="java.lang.IllegalStateException"></exclude>
            </no-rollback-exception-classes>
        </chunk>
    </step>

    <!-- =========================================== -->
    <step id="parent-has-chunk-child" parent="parent-has-chunk-parent">
    </step>
    <step id="parent-has-chunk-parent" abstract="true">
        <chunk checkpoint-policy="custom" skip-limit="15">
            <reader ref="R1">
                <properties merge="false">
                    <property name="child" value="child"></property>
                </properties>
            </reader>
            <processor ref="P1">
                <properties merge="true">
                    <property name="child" value="child"></property>
                </properties>
            </processor>
            <writer ref="W1">
                <properties>
                    <property name="child" value="child"></property>
                </properties>
            </writer>
        </chunk>
    </step>


</job>
