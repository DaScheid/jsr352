<job id="step-same-file-parent-child" xmlns="http://batch.jsr352/jsl"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="http://batch.jsr352/jsl http://java.net/projects/jbatch/sources/jsr-352-git-repository/content/JSR352.JobXML.Model/src/main/resources/jobXML.xsd?rev=6ef2f1ade9d0d4ea635a243898bf0f25cd71b346">

    <!-- parent has its own parent -->
    <step id="step-same-file-child-child" parent="step-same-file-child-1">
        <properties>
            <property name="child-child" value="child-child"></property>
            <property name="parent" value="parent"></property>  <!-- make sure dups are not added twice -->
        </properties>
        <listeners>
            <listener ref="child-child"></listener>
        </listeners>
        <batchlet ref="child-child">
        </batchlet>
    </step>

    <step id="step-same-file-child-1" parent="step-same-file-parent">
        <properties>
            <property name="child" value="child"></property>
            <property name="parent" value="parent"></property>  <!-- make sure dups are not added twice -->
        </properties>
        <listeners>
            <listener ref="child"></listener>
            <listener ref="parent"></listener>  <!-- make sure dups are not added twice -->
        </listeners>
        <batchlet ref="child">
        </batchlet>
    </step>

    <step id="step-same-file-child-2" parent="step-same-file-parent">
        <properties>
            <property name="child" value="child"></property>
        </properties>

        <listeners>
            <listener ref="child"></listener>
        </listeners>
        <batchlet ref="child">
        </batchlet>
    </step>

    <step id="step-same-file-parent" abstract="true">
        <properties>
            <property name="parent" value="parent"></property>
            <property name="child" value="parent"></property>  <!-- make sure dups are not added twice, and value is overridden by child -->
        </properties>

        <listeners>
            <listener ref="parent"></listener>
            <listener ref="child"></listener>  <!-- make sure dups are not added twice -->
        </listeners>
    </step>

    <!-- ======================================================== -->

    <step id="inheriting-empty-parent" parent="empty-parent">
        <properties>
            <property name="child" value="child"></property>
        </properties>

        <listeners>
            <listener ref="child"></listener>
        </listeners>
        <batchlet ref="child"></batchlet>
    </step>

    <step id="empty-parent" abstract="true"></step>

    <!-- ======================================================== -->

    <step id="inherited-by-empty-child">
        <properties>
            <property name="child" value="child"></property>
        </properties>

        <listeners>
            <listener ref="child"></listener>
        </listeners>
        <batchlet ref="child"></batchlet>
    </step>

    <step id="empty-child" parent="inherited-by-empty-child"></step>


</job>
